#!/bin/bash


bg="#021b21"
fg="#eeeeee"

font="-xos4-terminus-medium-r-normal--12-120-72-72-c-60-iso10646-1"
#sh barfeed.sh | lemonbar -g 1920x24+0+0 -f$font -B$bg HDMI1 &
#sh barfeed.sh | lemonbar -g 1680x24+0+0 -f$font -B$bg HDMI1 &

#sh barfeed.sh | lemonbar -g 1366x24+0+0 -f$font -B$bg eDP1   
#sh barfeed.sh | lemonbar -g 220x24+0+0 -f$font -B$bg eDP1   
resolution=""

monitors() {
    state= xrandr | grep HDMI1 | awk '{print $2}'
    if [ $state == "connected" ] 
    then
        resolution= xrandr | grep HDMI1 | awk '{print $3}' | sed 's/x.*$//'     
    fi
}


 Check if lemonbar is already running and kill it if it is
active() {
lemonID=$(pidof lemonbar)
    if [ "$lemonID" != "" ]
    then 
        killall lemonbar 
    fi
}

$(monitors)
$(active)

